{
  "schemaVersion": 1,
  "id": "magic",
  "version": "${version}",

  "name": "Magic Mod",
  "description": "A magic mod for magic MC.",
  "authors": [
    "Ayutac"
  ],
  "contact": {
    "homepage": "https://github.com/Ayutac/magic",
    "sources": "https://github.com/Ayutac/magic"
  },

  "license": "MIT",
  "icon": "assets/magic/textures/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "org.abos.fabricmc.magic.Magic"
    ],
    "client": [
      "org.abos.fabricmc.magic.client.MagicClient"
    ],
    "cardinal-components": [
      "org.abos.fabricmc.magic.cca.CcaInitializer"
    ]
  },
  "mixins": [
    "magic.mixins.json"
  ],
  "accessWidener": "magic.accesswidener",
  "custom": {
    "cardinal-components": [
      "magic:mana"
    ]
  },

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  }
}
